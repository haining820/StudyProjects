<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!--开启包扫描使注解生效-->
    <context:component-scan base-package="com.haining820.controller"/>
    <!--应用名字-->
    <dubbo:application name="service-consumer"/>

    <!--==================================================================================================================-->
    <!--使用zookeeper作为注册中心配置-->
    <!--指定注册中心地址-->
<!--    <dubbo:registry address="zookeeper://127.0.0.1:2181"/>-->
    <!--声明需要调用的远程服务的接口，生成远程服务代理-->
<!--    <dubbo:reference id="userService" interface="com.haining820.service.UserService"/>-->
    <!--==================================================================================================================-->
    <!--直连配置-->
    <dubbo:reference id="userService"  interface="com.haining820.service.UserService" url="localhost:20881" registry="N/A"/>
    <!--==================================================================================================================-->


    <dubbo:reference id="cfAsyncService" interface="com.haining820.service.CompletableFutureAsyncService" url="localhost:20881" registry="N/A" timeout="20000">
        <dubbo:method name="sayHelloAsync" async="true"/>
    </dubbo:reference>

    <dubbo:reference id="rcAsyncService" interface="com.haining820.service.RpcContextAsyncService" url="localhost:20881" registry="N/A" timeout="20000">
        <dubbo:method name="sayHelloAsync" async="true"/>
    </dubbo:reference>

    <dubbo:reference id="acAsyncService" interface="com.haining820.service.AsyncContextAsyncService" url="localhost:20881" registry="N/A" timeout="20000"/>




</beans>
